%html.no-js{:lang => "zh"}
  / <![endif]
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title Say Love - Where True Hearts Meet
    %meta{:content => "", :name => "description"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    = stylesheet_link_tag "bootstrap.min", "letters", :media => "all"
    = javascript_include_tag "modernizr-2.5.3.min"
    = csrf_meta_tags
  %body
    = render "shared/global_header"
    .container
      .wrapper
        .row
          .span8
            = yield
          .span4
            - if @page_id == 'index'
              .sidebox 欢迎，来自#{get_provider_display_name}的 #{current_user.user_name}
            - offset_top = @page_id == 'index' ? '126' : '64'
            .sidebox{"data-offset-top" => "#{offset_top}", "data-spy" => "affix"}
              = link_to "写信给 Ta >", write_path, {:id => 'write_btn'}
    = render "shared/global_footer"
    = javascript_include_tag "letters"
    / Baidu Button START
    %script#bdshare_js{:data => "type=tools&uid=0", :type => "text/javascript"}
    %script#bdshell_js{:type => "text/javascript"}
    :javascript
      document.getElementById("bdshell_js").src = "http://bdimg.share.baidu.com/static/js/shell_v2.js?cdnversion=" + Math.ceil(new Date()/3600000)
    / Baidu Button END
